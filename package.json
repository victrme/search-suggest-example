{
	"name": "search-suggestions-example",
	"version": "2.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"css": "tailwindcss -i ./src/app.css -o ./src/_app.css",
		"css:watch": "tailwindcss -i ./src/app.css -o ./src/_app.css --watch",
		"dev": "npx concurrently 'npm run css:watch' 'vite dev'",
		"build": "npm run css && vite build",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^4.1.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"svelte": "^5.0.0-next.1",
		"tailwindcss": "^3.4.1",
		"vite": "^5.0.3"
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"printWidth": 120
	}
}
